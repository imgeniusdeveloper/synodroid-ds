<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/RelativeLayout01"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent">
    <LinearLayout android:layout_width="fill_parent" android:layout_alignParentTop="true" android:id="@+id/line_id" android:layout_height="1dip" android:background="#BBFFFFFF" android:layout_marginRight="20dip" android:layout_marginLeft="20dip">
</LinearLayout><TextView android:text="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/step_text_id" android:layout_below="@+id/line_id" android:layout_centerHorizontal="false" android:layout_alignParentRight="true" android:paddingRight="20dip" android:paddingTop="4dip" android:paddingBottom="4dip"></TextView><LinearLayout
        android:layout_below="@id/id_file_size"
        android:layout_alignParentBottom="true"
        android:id="@+id/buttonPanel"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false" android:layout_width="fill_parent" android:gravity="center_horizontal" android:background="#FFC2C2C2" android:paddingTop="4dip">
        <Button
            android:layout_height="wrap_content"
            android:id="@+id/prev_btn_id"
            android:text="@string/button_previous" android:minWidth="120dip" android:layout_width="wrap_content"></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_next"
            android:id="@+id/next_btn_id" android:minWidth="120dip"></Button>
        
    </LinearLayout>
    <ViewFlipper
        android:layout_above="@+id/buttonPanel"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:id="@+id/view_flipper_id"
        android:layout_centerInParent="false"
        android:layout_centerVertical="false"
        android:layout_centerHorizontal="false" android:layout_below="@+id/step_text_id"></ViewFlipper>

</RelativeLayout>